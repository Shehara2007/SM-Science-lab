   <ImageView fitHeight="70.0" fitWidth="100.0" layoutX="259.0" layoutY="36.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../Icons/icons8-forgot-password-48.png" />
      </image>
   </ImageView>
   <Button layoutX="244.0" layoutY="349.0" mnemonicParsing="false" onAction="#btnBacktoLogin" text="&lt; Back to Login" />
   <padding>
      <Insets bottom="5.0" right="5.0" top="5.0" />
   </padding>

</AnchorPane>
